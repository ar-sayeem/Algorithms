#include<stdio.h>
int main()
{
    int n, i, sum = 0;
    float average = 0;
    printf("Input array size: ");
    scanf("%d", &n);

    int a[n];
    printf("Input array elements: ");
    for(i=0; i<n; i++)      // Input array elements.
    {
        scanf("%d", &a[i]);
        sum = sum + a[i];      // Sum of array elements.
    }
    average = sum/n;               // Average of array elements.
    printf("Average: %.2f\n", average);
    return 0;

}

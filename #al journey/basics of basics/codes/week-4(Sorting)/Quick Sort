/// Quick Sort Using if-else in C

#include <stdio.h>
#include<stdlib.h>

int partition(int a[], int low, int high)
{
    int pivot = a[high];
    int i = (low - 1);

    for (int j = low; j <= high - 1; j++)
    {
        if (a[j] <= pivot)
        {
            i++;
            int temp = a[i];
            a[i] = a[j];
            a[j] = temp;
        }
    }

    int temp = a[i + 1];
    a[i + 1] = a[high];
    a[high] = temp;

    return (i + 1);
}

void quickSort(int a[], int low, int high)
{
    if (low < high)
    {
        int pivot = partition(a, low, high);


        quickSort(a, low, pivot - 1);
        quickSort(a, pivot + 1, high);
    }
}

int main()
{
    int n, i;
    printf("Array Size?\n");
    scanf("%d", &n);
    int a[n];
    printf("Enter the Elements:\n");
    for(i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }

    printf("Given Array:\n");
    for (int i = 0; i < n; i++)
    {
        printf("%d ", a[i]);
    }

    printf("\n");
    quickSort(a, 0, n - 1);

    printf("After Quick Sort:\n");
    for (int i = 0; i < n; i++)
    {
        printf("%d ", a[i]);
    }
    printf("\n");

    return 0;
}


